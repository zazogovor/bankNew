<h1>Your details:</h1>

<div class ="row">
	<div class="col-md-6">
		<div class="panel panel-default">
			<!-- Default panel contents -->
			<div class="panel-heading">
				<strong>Your details</strong>
			</div>

			<!-- Table -->
			<table class="table">
				<table style="width:100%">
					<thead>
						<tr>
							<th>Customer ID</th>
							<th>Firstname</th>
							<th>Middlename</th>
							<th>Lastname</th>
							<th>Date of birth</th>
							<th>Telephone</th>
							<th>Address</th>
							<th>City</th>
							<th>Country</th>
							<th>Email</th>
							<th>Password Digest</th>
							<th colspan="3"></th>
						</tr>
					</thead>

					<tbody>
						<tr>
							<td><%= @current_customer.id %></td>
							<td><%= @current_customer.firstname %></td>
							<td><%= @current_customer.middlename %></td>
							<td><%= @current_customer.lastname %></td>
							<td><%= @current_customer.date_of_birth %></td>
							<td><%= @current_customer.telephone %></td>
							<td><%= @current_customer.address %></td>
							<td><%= @current_customer.city %></td>
							<td><%= @current_customer.country %></td>
							<td><%= @current_customer.email %></td>
							
							<!-- <td><%= @current_customer.password_digest %></td> -->
							<td><%=  %> <!-- empty line so that the SHOW button doesnt move -->
							
							<td><%= link_to 'Show', @current_customer %></td>
							<td><%= link_to 'Edit', edit_customer_path(@current_customer) %></td>
							<td><%= link_to 'Destroy', @current_customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
						</tr>
					</tbody>
				</table>
			</table>
		</div>
	</div>
</div>
<br>
<%= link_to 'New Customer', new_customer_path %>